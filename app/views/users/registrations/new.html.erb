<div class="row user_signup">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <div class = "login_box">
      <h2 class = "login_font">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :氏名（漢字） %><br />
          <%= f.text_field :kanji_name, autofocus: true, autocomplete: "kanji_name" %>
        </div>

        <div class="field">
          <%= f.label :氏名（カナ） %><br />
          <%= f.text_field :kana_name, autofocus: true, autocomplete: "kana_name" %>
        </div>

        <div class="field">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
            <%= f.label :性別 %><br />
            <%= f.select :sex, [["男性", "男性"], ["女性", "女性"]] ,class:"form-control" %>
          </div>

          <div class="field">
          <%= f.label :身長 %><br />
          <%= f.select :height, [["~150cm", "~150cm"], ["150~155cm", "150~155cm"], ["155~160cm", "155~160cm"], ["165~170cm", "165~170cm"], ["170~175cm", "170~175cm"], ["175~180cm", "175~180cm"], ["180~185cm", "180~185cm"], ["185~190cm", "185~190cm"], ["190cm~", "190cm~"]] ,class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
          <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
        <% end %>

      <% end %>

      <div class="field">
        <%= render "users/shared/links" %>
      </div>
      </div>
    </div>
    <div class="col-xs-2"></div>
</div>