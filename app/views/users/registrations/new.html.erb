<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :氏名（漢字） %><br />
    <%= f.text_field :kanji_name, autofocus: true, autocomplete: "kanji_name" %>
  </div>

  <div class="field">
    <%= f.label :氏名（カナ） %><br />
    <%= f.text_field :kana_name, autofocus: true, autocomplete: "kana_name" %>
  </div>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
      <%= f.label :性別 %><br />
      <%= f.select :sex, [["男性", "男性"], ["女性", "女性"]] ,class:"form-control" %>
    </div>

    <div class="field">
    <%= f.label :身長 %><br />
    <p><%= f.select :height, [["~150", "~150"], ["150~155", "150~155"], ["155~160", "155~160"], ["165~170", "165~170"], ["170~175", "170~175"], ["175~180", "175~180"], ["180~185", "180~185"], ["185~190", "185~190"], ["190~", "190~"]] ,class:"form-control" %>cm</p>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認用パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
