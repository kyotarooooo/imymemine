<div class = "mypage">
    <h1 class = "mypagefont">マイページ</h1>
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-4">
        	<%= attachment_image_tag @user, :profile_image, :fill, 400, 400, format: 'jpeg', fallback: "no_image.jpg", size:'400x400', class: 'img-circle profile-thumb my-img edit-img' %>
        </div>
        <div class="col-xs-6">
            <div class = "mypage2">
        	<p class = "font">氏名（漢字） : <%= @user.kanji_name %></p>
        	<p class = "font">氏名（カナ） : <%= @user.kana_name %></p>
        	<p class = "font">ユーザー名 : <%= @user.user_name %></p>
        	<p class = "font">性別 : <%= @user.sex %></p>
        	<p class = "font">身長 : <%= @user.height %>cm</p>
        	<p class = "font">メールアドレス : <%= @user.email %></p>
        	<p class = "font">紹介文 : <%= @user.introduction %></p>
            <%= link_to edit_user_path(@user.id) do %>
                <p class = "font">～<i class="fas fa-link"></i>編集～</p>
            <% end %>
            <%= link_to new_coordinate_path do %>
                <p class = "font">～<i class="fas fa-link"></i>投稿～</p>
            <% end %>
            </div>
        </div>
        <div class="col-xs-1"></div>
    </div>


    <div class="row field">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
            <h3 class = "font">コーディネート一覧</h3>
        	<div class = "user_show2">
    		<% @coordinates.each do |coordinate| %>
    			<%= link_to coordinate_path(coordinate) do %>
    			<%= attachment_image_tag coordinate, :coordinate_image, :fill, 300, 350, format: 'jpeg' %>
    			<% end %>
    		<% end %>
    		</div>
        </div>
        <div class="col-xs-1"></div>
    </div>

    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
            <h3 class = "font">いいねした投稿</h3>
            <div class = "mypage3">
            <!-- いいね機能 -->
            <% @user.liked_coordinates.each do |coordinate| %>
                <%= link_to coordinate_path(coordinate) do %>
                <%= attachment_image_tag coordinate, :coordinate_image, :fill, 200, 200, format: 'jpeg' %>
            <% end %>
            <% end %>
            </div>
        </div>
        <div class="col-xs-1"></div>
    </div>
</div>