<div class="row field">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
    	<% if @coordinate.errors.any? %>
			<div id = "error_explanation" class = "alert alert-danger">
			<ul>
			<% @coordinate.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
			</div>
		<% end %>

<!-- コーディネート登録 -->
<h3>コーディネートを投稿する</h3>
<%= form_for(@coordinate) do |f| %>
	<div class = "field">
		<%= f.attachment_field :coordinate_image %>
	</div>

	<div class = "field">
		<%= f.label :本文 %></br>
		<%= f.text_area :body, :size=>"120x20", autofocus: true, autocomplete: "body" %>
	</div>

<!-- アイテム登録 -->
<h3>アイテムを登録する</h3>
<div id = "items">
	<%= f.fields_for :items do |item_fields| %>
		<%= render 'item_fields', f: item_fields %>
	<% end %>
	<div id = "links">

		<%= link_to_add_association 'add item',f, :items %>
	</div>
	<%= f.submit "投稿する" %>
</div>
<% end %>

<div class = "space"></div>