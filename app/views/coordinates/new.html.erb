<h1>コーディネートを投稿する</h1>

<div class="row field">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
    	<% if @coordinate.errors.any? %>
			<div id = "error_explanation" class = "alert alert-danger">
			<ul>
			<% @coordinate.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
			</div>
		<% end %>


<%= form_for(@coordinate) do |f| %>
	<div class = "field">
		<%= f.attachment_field :coordinate_image %>
	</div>

	<div class = "field">
		<%= f.label :本文 %></br>
		<%= f.text_area :body, :size=>"120x20", autofocus: true, autocomplete: "body" %>
	</div>

	<div class = "field">
		<%= f.submit "投稿する" %>
	</div>
<% end %>
    </div>
    <div class="col-xs-1"></div>
</div>