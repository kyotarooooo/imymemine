<div class="row coordinate_new">
    <div class="col-xs-1"></div>
    <div class="col-xs-10 coordinate_new2">
    	<% if @coordinate.errors.any? %>
			<div id = "error_explanation" class = "alert alert-danger">
			<ul>
			<% @coordinate.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
			</div>
		<% end %>

<!-- コーディネート登録 -->
<h3 class = "font">コーディネートを投稿する</h3>
<%= form_for(@coordinate) do |f| %>
	<div class = "field">
		<font color = "#fff"><%= f.attachment_field :coordinate_image %></font>
	</div>

	<div class = "field">
		<%= f.label :本文 %></br>
		<%= f.text_area :body, :size=>"100x10", autofocus: true, autocomplete: "body", placeholder: "本文を入力してください。　例）#ootd #coordinate" %>
	</div>

<!-- アイテム登録 -->
<h3 class = "font">アイテムを登録する</h3>
<div id = "items">
	<%= f.fields_for :items do |item_fields| %>
		<%= render 'item_fields', f: item_fields %>
	<% end %>
	<div id = "links">

		<%= link_to_add_association 'add item',f, :items %>
	</div>
	<div class = "field">
		<%= f.submit "投稿する" %>
	</div>
</div>
<% end %>
</div>